<!-- Content Heading -->

<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<!-- Flash Message Section -->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<!-- Content -->
<section class="account-container">
    <ul class="management-container">
        <a class="management-link" href="/inv/add-classification">Add New Classification</a>
        <a class="management-link" href="/inv/add-inventory">Add New Inventory</a>
    </ul>
    
</section>



